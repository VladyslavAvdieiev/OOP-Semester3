<Window x:Class="PresentationLayer.GraphicalUserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer.GraphicalUserInterface"
        mc:Ignorable="d"
        Title="Restaurant" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="MenuItemStyle">
            <Setter Property="Control.FontSize" Value="16" />
            <Setter Property="Control.Background" Value="Gray" />
            <Setter Property="Control.Foreground" Value="White" />
        </Style>
    </Window.Resources>
    
    <Grid x:Name="MainGrid">
        <Menu x:Name="menu_left"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Left"
              Style="{StaticResource ResourceKey=MenuItemStyle}">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem x:Name="menuItem_ingredients"
                      Header="Ingredient">
                <MenuItem.LayoutTransform>
                    <TransformGroup>
                        <RotateTransform Angle="90"/>
                    </TransformGroup>
                </MenuItem.LayoutTransform>
            </MenuItem>
            <MenuItem x:Name="menuItem_dishes"
                      Header="Dishes">
                <MenuItem.LayoutTransform>
                    <TransformGroup>
                        <RotateTransform Angle="90"/>
                    </TransformGroup>
                </MenuItem.LayoutTransform>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
