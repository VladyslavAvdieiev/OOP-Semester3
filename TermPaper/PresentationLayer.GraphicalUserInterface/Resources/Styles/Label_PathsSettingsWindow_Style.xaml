<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PresentationLayer.GraphicalUserInterface.Resources.Styles">
    
    <Style x:Key="Label_PathsSettingsWindow_Style" TargetType="{x:Type Label}">
        <Setter Property="Control.FontSize" Value="16"/>
        <Setter Property="Control.FontWeight" Value="DemiBold"/>
        <Setter Property="Control.Foreground" Value="WhiteSmoke"/>
        <Setter Property="Control.Margin" Value="25,0,0,0"/>
        <Setter Property="Control.VerticalAlignment" Value="Bottom"/>
    </Style>
</ResourceDictionary>