<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PresentationLayer.GraphicalUserInterface.Resources.Styles">

    <Style x:Key="Menu_MainWindow_Style" TargetType="{x:Type Menu}">
        <Setter Property="Control.FontSize" Value="22"/>
        <Setter Property="Control.Foreground" Value="WhiteSmoke"/>
        <Setter Property="Control.Background" Value="#FF3F3F46"/>
        <Setter Property="Control.VerticalAlignment" Value="Top"/>
        <Setter Property="Control.HorizontalAlignment" Value="Stretch"/>
    </Style>
</ResourceDictionary>