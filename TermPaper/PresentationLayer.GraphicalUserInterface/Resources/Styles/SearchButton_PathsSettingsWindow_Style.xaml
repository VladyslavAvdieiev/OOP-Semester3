<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PresentationLayer.GraphicalUserInterface.Resources.Styles">

    <Style x:Key="SearchButton_PathsSettingsWindow_Style" TargetType="{x:Type Button}">
        <Setter Property="Control.Background" Value="WhiteSmoke"/>
        <Setter Property="Control.Width" Value="22"/>
        <Setter Property="Control.Height" Value="22"/>
        <Setter Property="Control.VerticalAlignment" Value="Top"/>
        <Setter Property="Control.HorizontalAlignment" Value="Right"/>
        <Setter Property="Control.Margin" Value="0,0,2,0"/>
        <Setter Property="Control.ToolTip">
            <Setter.Value>
                <ToolTip Content="Search button. Click to open file dialog to select file."/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>