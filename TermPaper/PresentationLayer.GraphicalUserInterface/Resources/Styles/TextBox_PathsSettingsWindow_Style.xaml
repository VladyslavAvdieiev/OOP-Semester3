<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PresentationLayer.GraphicalUserInterface.Resources.Styles">
    
    <Style x:Key="TextBox_PathsSettingsWindow_Style" TargetType="{x:Type TextBox}">
        <Setter Property="Control.FontSize" Value="15"/>
        <Setter Property="Control.Foreground" Value="WhiteSmoke"/>
        <Setter Property="Control.Background" Value="#FF3F3F46"/>
        <Setter Property="Control.Margin" Value="30,0,30,0"/>
        <Setter Property="Control.VerticalAlignment" Value="Top"/>
    </Style>
</ResourceDictionary>